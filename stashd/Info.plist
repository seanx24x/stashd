<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>NSFaceIDUsageDescription</key>
    <string>Stashd uses Face ID to protect your collections and sensitive data</string>
    
    <!-- ADD THESE THREE LINES -->
    <key>NSCameraUsageDescription</key>
    <string>stashd needs access to your camera to scan and identify items in your collection.</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>stashd needs access to your photo library to add photos of your collectibles.</string>
    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>stashd needs access to save photos of your collectibles.</string>
    
    <key>UIBackgroundModes</key>
    <array>
        <string>remote-notification</string>
    </array>
    <key>OPENAI_API_KEY</key>
    <string>$(OPENAI_API_KEY)</string>
    <key>DISCOGS_API_TOKEN</key>
    <string>$(DISCOGS_API_TOKEN)</string>
    <key>TMDB_API_KEY</key>
    <string>$(TMDB_API_KEY)</string>
    <key>IGDB_CLIENT_ID</key>
    <string>$(IGDB_CLIENT_ID)</string>
    <key>IGDB_CLIENT_SECRET</key>
    <string>$(IGDB_CLIENT_SECRET)</string>
    <key>EBAY_CLIENT_ID</key>
    <string>$(EBAY_CLIENT_ID)</string>
    <key>EBAY_CLIENT_SECRET</key>
    <string>$(EBAY_CLIENT_SECRET)</string>
    <key>FirebaseAppDelegateProxyEnabled</key>
    <false/>
</dict>
</plist>
